package ejercicios;

import java.util.Scanner;

public class Ejer05 {

	public static void main(String[] args) {

		Scanner input = new Scanner(System.in);

		System.out.print("PRODUCTO: ");
		String producto = input.nextLine();

		System.out.print("\nPRECIO: ");
		float precio = input.nextFloat();

		System.out.println("\nDESCUENTO (%): ");
		int descuento = input.nextInt();

		float total = (precio - (precio * ((float) descuento / 100)));

		System.out.println("PRODUCTO\tPRECIO\t\tDESCUENTO\tTOTAL");

		System.out.println(producto + "\t\t" + precio + "€" + "\t\t" + descuento + "%" + "\t\t" + total + "€");

	}

}