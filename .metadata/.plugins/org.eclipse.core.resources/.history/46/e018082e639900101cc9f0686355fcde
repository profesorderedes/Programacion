
public class Ejemplo02 {

	public static void main(String[] args) {

		// Declaramos la variable nombre, de tipo String (se puede guardar en ella un
		// String, es decir, un texto).
		String nombre;

		// Asignamos un valor inicial (inicializamos) a la variable nombre.
		nombre = "Carlos";

		// Ahora podemos usar la variable donde queramos:
		System.out.println("Tu nombre es " + nombre + ".");

		// Declaramos la variable edad, de tipo int (integer, entero) (se puede guardar
		// en ella un número entero).
		int edad;
		
		// Inicializamos la variable edad (le damos un valor inicial).
		edad = 20;
		
		// Ya podemos usar esta variable:
		System.out.println("Tu edad es " + edad + " años.");
		
		

	}

}
