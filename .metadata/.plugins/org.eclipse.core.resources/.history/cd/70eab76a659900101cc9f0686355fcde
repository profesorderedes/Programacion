
public class Ejemplo03 {

	public static void main(String[] args) {

		// Habitualmente declaramos e incializamos en una sola l√≠nea.
		String nombreCliente = "Carlos";

		// Lo mismo podemos hacer para edad:
		int edadCliente = 20;

		// Las variables se llaman "variables" porque podemos cambiar su valor siempre
		// que queramos.
		nombre = "Pepito";
		System.out.println("Nombre: " + nombre);

		edad = 40;
		System.out.println("Edad: " + edad);
		

	}

}
