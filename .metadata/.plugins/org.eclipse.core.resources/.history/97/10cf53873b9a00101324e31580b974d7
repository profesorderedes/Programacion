
public class Ejemplo07 {

	public static void main(String[] args) {

		int num1 = 30;
		int num2 = 4;

		// Resto de la división de 39 entre 4:
		System.out.println("El resto de dividir " + num1 + " entre " + num2 + " da " + num1 % num2 + ".");

		// Operaciones relacionales.

		// ¿num1 es igual a num2?
		System.out.println(num1 == num2);

		// ¿num1 es diferente a num2?
		System.out.println(num1 != num2);

		// ¿num1 es menor que num2?
		System.out.println(num1 < num2);

		// ¿num1 es mayor que num2?
		System.out.println(num1 > num2);

		// ¿num1 es menor o igual que num2?
		System.out.println(num1 <= num2);

		// ¿num1 es mayor o igual que num2?
		System.out.println(num1 >= num2);

		// Como los operadores relacionales devuelven un booleano, podemos guardar el
		// resultado en una variable booleana para utilizarlo más adelante.
		boolean resultado = (num1 >= num2);
		
		
		

	}

}





